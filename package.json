{
  "name": "taurius-psc",
  "author": {
    "email": "pedr.augustobarbosa.aparecido@gmail.com",
    "name": "Pedro Augusto Barbosa Aparecido",
    "url": "https://github.com/Pedro-Augusto-Barbosa-Aparecido"
  },
  "version": "0.0.1",
  "description": "Simple CLI to create crud with prisma",
  "private": false,
  "types": "build/types/types.d.ts",
  "bin": {
    "taurius-psc": "bin/taurius-psc",
    "psc": "bin/taurius-psc"
  },
  "scripts": {
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "latest"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prisma": "^5.2.0",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "~4.5.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
